<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/include_head_title"
        layout="@layout/head_title" />

    <ListView
        android:id="@+id/ll_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_head_title"
        android:layout_marginBottom="@dimen/dp_50"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:footerDividersEnabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/view_bg_color"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_add_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/bg_red_3"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="确定"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>