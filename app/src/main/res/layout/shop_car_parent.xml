<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shop_car_parent_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_group_top"
            android:layout_width="@dimen/dp_60"
            android:layout_height="40dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb_group_check"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/checked"
                android:button="@null"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_shop"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shopping_cart" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_2"
                android:ellipsize="end"
                android:maxEms="9"
                android:singleLine="true"
                android:text="商家xxxx"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/tv_minsendprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="7"
                android:singleLine="true"
                android:text="(满300配送)"
                android:textColor="@color/dipatch_bg"
                android:textSize="@dimen/text_12"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_6">

            <TextView
                android:id="@+id/tv_join_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_4"
                android:singleLine="true"
                android:text="去凑单"
                android:textColor="@color/dipatch_bg"
                android:textSize="@dimen/shop_car_top_text"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_join_goods"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/content_return_arrow"
                android:paddingRight="12dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
