<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_single_list"
    android:background="@color/white"
    android:paddingLeft="@dimen/home_margin_lr"
    android:paddingRight="@dimen/home_margin_lr"
    android:orientation="vertical">

    <include layout="@layout/view_full" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="6dp">

            <CheckBox
                android:id="@+id/iv_select"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/shop_selevt_checked"
                android:button="@null"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="店铺名称"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/tv_single_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="单店单价：80.00" />
    </LinearLayout>

</LinearLayout>