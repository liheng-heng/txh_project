<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_update_title">

        <TextView
            android:id="@+id/apktitle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="版本更新2.1.0"
            android:textColor="@color/white"
            android:textSize="19sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/apkcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_9"
        android:text="天下货 v2.13.版本更新\n1、修改xxxxxxxxxx\n1、修改xxxxxxxxxx\n1、修改xxxxxxxxxx\n1、111111111"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/huise"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelapk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_1"
            android:layout_weight="1"
            android:background="@drawable/bg_update_cancle_5"
            android:gravity="center"
            android:text="取消"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/updateapk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_red_conner_5"
            android:gravity="center"
            android:text="更新"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/huise" />

</LinearLayout>