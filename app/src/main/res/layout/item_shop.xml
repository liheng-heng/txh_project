<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_good_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/shape_frame_line_shop"
            android:padding="@dimen/dp_4"
            android:src="@drawable/default_good" />

        <RelativeLayout
            android:id="@+id/rl_item_mer_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/shop_car_parent_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="店铺名称：店铺名称"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:singleLine="true"
                    android:text="联系电话：联系电话"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_money_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起订金额:"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="200"
                        android:textColor="@color/red_text"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_talk_layout"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_talk"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/home_chat_icon"
                    android:clickable="true" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_6"
        android:orientation="vertical"
        android:visibility="gone" />

    <include layout="@layout/view_ten" />
</LinearLayout>