<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_car_parent_bg"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_goods_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_5" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/iv_goods_logo"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/dp_2"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_standard_sale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_goods_name"
                    android:layout_marginRight="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_standard_sale"
                    android:layout_marginRight="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/buttom_color"
                    android:textSize="@dimen/dp_13" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:paddingRight="@dimen/dp_5">


                    <com.txh.im.widget.AccountView
                        android:id="@+id/av_goods_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        app:av_height="35dp"
                        app:av_text="0"
                        app:av_width="40dp" />
                </FrameLayout>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="10dp"-->
    <!--android:layout_below="@+id/rl_layout"-->
    <!--android:background="@color/view_bg_color" />-->

</RelativeLayout>